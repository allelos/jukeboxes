generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Station {
  id           Int      @id @default(autoincrement())
  name         String   @db.VarChar(255)
  streamingUrl String
  imageSrc     String
  createdAt    DateTime @default(now()) @db.Timestamp(6)
  genreId      Int
  genre        Genre    @relation(fields: [genreId], references: [id])

  @@index([genreId])
}

model Genre {
  id       Int       @id @default(autoincrement())
  name     String?   @db.VarChar(255)
  stations Station[]
}
